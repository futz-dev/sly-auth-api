  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serverless Lambda Offline",
      "program": "${workspaceRoot}/node_modules/serverless/bin/serverless",
      "args": ["offline", "start", "--noTimeout"],
      "outFiles": ["${workspaceFolder}/.webpack/src/lambda.js"],
      "protocol": "inspector",
      "runtimeExecutable": "node",
      "sourceMaps": true
    }
  ]
}
