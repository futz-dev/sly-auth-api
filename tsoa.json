{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller*.ts"],
  "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "http://localhost:3000/api/v1",
            "tokenUrl": "https://todo",
            "refreshUrl": "https://todo",
            "scopes": {}
          }
        }
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "authenticationModule": "src/auth.ts"
  }
}
